<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
	<property name="connection.datasource">java:comp/env/jdbc/ods</property>
	<property name="hibernate.max_fetch_depth">6</property>
	<property name="hibernate.default_schema">dbo</property>
	<property name="hibernate.connection.driver_class">net.sourceforge.jtds.jdbc.Driver</property>
	<property name="hibernate.dialect">edit.services.db.hibernate.SQLServer2008Dialect</property>
	<property name="show_sql">true</property>

	<mapping resource="com/editsolutions/prd/vo/PolicyHolder.hbm.xml"></mapping>

    </session-factory>
</hibernate-configuration>
