<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="staging.GIOOptionValue" table="GIOOPTIONVALUE"  >
        <id name="GIOOptionValuePK" column="GIOOPTIONVALUEPK" type="long">
            <generator class="edit.services.db.hibernate.KeyGenerator"/>
        </id>

        <property name="SegmentBaseFK" column="SEGMENTBASEFK" insert="false" update="false"/>

        <property name="OptionDate" column="OPTIONDATE" type="edit.services.db.hibernate.customtype.EDITDateUserType"/>

        <property name="DBIncreaseAmount" column="DBINCREASEAMOUNT" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="DBIncreaseAmountGuaranteed" column="DBINCREASEAMOUNTGUARANTEED" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="AnnualPremium" column="ANNUALPREMIUM" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>

        <many-to-one
            name="SegmentBase"
            column="SEGMENTBASEFK"
            class="staging.SegmentBase"
            cascade="none"/>

    </class>
</hibernate-mapping>
