<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="contract.InvestmentAllocation" table="&quot;InvestmentAllocation&quot;"  >
        <id name="InvestmentAllocationPK" column="&quot;InvestmentAllocationPK&quot;" type="long">
            <generator class="edit.services.db.hibernate.KeyGenerator"/>
        </id>

        <property name="AllocationPercent" column="&quot;AllocationPercent&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="Dollars" column="&quot;Dollars&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="Units" column="&quot;Units&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="OverrideStatus" column="&quot;OverrideStatus&quot;"/>

        <property name="InvestmentFK" column="&quot;InvestmentFK&quot;" insert="false" update="false"/>

        <many-to-one
            name="Investment"
            column="&quot;InvestmentFK&quot;"
            class="contract.Investment"
            cascade="none"/>

        <set name="InvestmentAllocationOverrides" table="&quot;InvestmentAllocationOverride&quot;" inverse="true"   cascade="all">
            <key column="&quot;InvestmentAllocationFK&quot;"/>
            <one-to-many class="event.InvestmentAllocationOverride"/>
        </set>
    </class>
</hibernate-mapping>
