<?xml version="1.0"?><!DOCTYPE hibernate-mapping PUBLIC        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>        <class name="security.Password" table="&quot;Password&quot;" >        <id name="PasswordPK" column="&quot;PasswordPK&quot;" type="long">            <generator class="edit.services.db.hibernate.KeyGenerator"/>        </id>        <property name="EncryptedPassword" column="&quot;EncryptedPassword&quot;"/>		<property name="CreationDate" column="&quot;CreationDate&quot;" type="edit.services.db.hibernate.customtype.EDITDateUserType"/>                <property name="Status" column="&quot;Status&quot;"/>        <property name="OrderOfCreation" column="&quot;OrderOfCreation&quot;"/>		<property name="OperatorFK" column="&quot;OperatorFK&quot;" insert="false" update="false"/>        		<property name="PasswordMaskFK" column="&quot;PasswordMaskFK&quot;" insert="false" update="false"/>                <many-to-one            name="Operator"            column="&quot;OperatorFK&quot;"            class="security.Operator"            cascade="none"/>                    <many-to-one            name="PasswordMask"            column="&quot;PasswordMaskFK&quot;"            class="security.PasswordMask"            cascade="none"/>        </class></hibernate-mapping>