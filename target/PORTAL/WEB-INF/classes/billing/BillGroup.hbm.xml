<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="billing.BillGroup" table="&quot;BillGroup&quot;"  >
        <id name="BillGroupPK" column="&quot;BillGroupPK&quot;" type="long">
            <generator class="edit.services.db.hibernate.KeyGenerator"/>
        </id>

        <property name="ExtractDate" column="&quot;ExtractDate&quot;" type="edit.services.db.hibernate.customtype.EDITDateUserType"/>
        <property name="DueDate" column="&quot;DueDate&quot;" type="edit.services.db.hibernate.customtype.EDITDateUserType"/>
        <property name="TotalBilledAmount" column="&quot;TotalBilledAmount&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="TotalPaidAmount" column="&quot;TotalPaidAmount&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="ReleaseDate" column="&quot;ReleaseDate&quot;" type="edit.services.db.hibernate.customtype.EDITDateUserType"/>
        <property name="StopReasonCT" column="&quot;StopReasonCT&quot;"/>
        <property name="OverageFundsAmount" column="&quot;OverageFundsAmount&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="ShortageFundsAmount" column="&quot;ShortageFundsAmount&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="CreditFundsAmount" column="&quot;CreditFundsAmount&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>

        <property name="BillScheduleFK" column="&quot;BillScheduleFK&quot;" insert="false" update="false"/>


        <many-to-one
            name="BillSchedule"
            column="&quot;BillScheduleFK&quot;"
            class="billing.BillSchedule"
            cascade="none"
            />

        <set name="Bills" table="&quot;Bill&quot;" inverse="true"   cascade="all">
            <key column="&quot;BillGroupFK&quot;"/>
            <one-to-many class="billing.Bill"/>
        </set>

    </class>
</hibernate-mapping>
