<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    
    <class name="com.editsolutions.prd.vo.DataHeader" table="PRD_DataHeader"  >
        <id name="dataHeaderPK" column="PRD_DataHeaderPK" type="long">
              <generator class="identity"/>
        </id>

        <property name="setupFK" column="PRD_SetupFK" type="long"/>
        <property name="prdDate" column="PRD_Date" type="date"/>
        <property name="comments" column="Comments"/>
        <property name="addDate" column="AddDate" type="date"/>
        <property name="addUser" column="AddUser"/>
        <property name="modDate" column="ModDate" type="date"/>
        <property name="modUser" column="ModUser"/>
        <property name="statusCT" column="StatusCT"/>
        <property name="testPrd" type="java.lang.Boolean">
           <column name="isTest" sql-type="tinyint"/>
        </property>

