<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="staging.Bill" table="&quot;BILL&quot;"  >
        <id name="BillPK" column="&quot;BILLPK&quot;" type="long">
            <generator class="edit.services.db.hibernate.KeyGenerator"/>
        </id>

        <property name="BillGroupFK" column="&quot;BILLGROUPFK&quot;" insert="false" update="false"/>
        <property name="SegmentBaseFK" column="&quot;SEGMENTBASEFK&quot;" insert="false" update="false"/>

        <property name="BilledAmount" column="&quot;BILLEDAMOUNT&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>
        <property name="PaidAmount" column="&quot;PAIDAMOUNT&quot;" type="edit.services.db.hibernate.customtype.EDITBigDecimalUserType"/>

        <many-to-one
            name="BillGroup"
            column="&quot;BILLGROUPFK&quot;"
            class="staging.BillGroup"
            cascade="none"/>

        <many-to-one
            name="SegmentBase"
            column="&quot;SEGMENTBASEFK&quot;"
            class="staging.SegmentBase"
            cascade="none"/>

    </class>
</hibernate-mapping>
