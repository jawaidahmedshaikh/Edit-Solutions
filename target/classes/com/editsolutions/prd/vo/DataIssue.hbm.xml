<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    
    <class name="com.editsolutions.prd.vo.DataIssue" table="PRD_DataIssues"  >
        <id name="dataIssuePK" column="PRD_DataIssuesPK" type="long">
              <generator class="identity"/>
        </id>

        <property name="dataFK" column="PRD_DataFK" type="long"/>
        <property name="dataHeaderFK" column="PRD_DataHeaderFK" type="long"/>
        <property name="isResolved" column="IsResolved" type="boolean"/>
        <property name="issueLookupCT" column="IssueLookup_CT"/>
        <property name="addDate" column="AddDate" type="date"/>
        <property name="addUser" column="AddUser"/>
        <property name="modDate" column="ModDate" type="date"/>
        <property name="modUser" column="ModUser"/>
        
        <many-to-one name="payrollDeductionData" lazy="false" 
        class="com.editsolutions.prd.vo.PayrollDeductionData"
                column="PRD_DataFK" unique="true" insert="false" update="false"/>
        
    </class>
</hibernate-mapping>
